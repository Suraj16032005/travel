<% layout("/layouts/boilerplate") %>

  <div class="row mt-3">
    <div class="col-8 offset-2">
      <h3>edit listings</h3>
      <form method="post" action="/listings/<%=EditList._id%>?_method=PUT" novalidate class="needs-validation" enctype="multipart/form-data"><br><br>

        <div class="mb-3">
          <label for="title" class="form-label">Title</label>
          <input type="text" name="listing[title]" value="<%=EditList.title%>" class="form-control" required>
          <div class="valid-feedback">Looks Good!</div>
          <div class="invalid-feedback">Title is required</div>
        </div>


        <div class="mb-3">
          <label for="description" class="form-label">Description</label>
          <textarea name="listing[description]" class="form-control" required><%=EditList.description%></textarea>
          <div class="valid-feedback">Looks Good!</div>
          <div class="invalid-feedback">Textarea cannot be empty</div>
        </div>

        <div class="mb-3">
          <label for="image" class="form-label">Upload New Image Link</label>
          <input type="file" name="listing[image]" class="form-control">
        </div>


        <div class="row">
          <div class="mb-3 col-md-4">
            <label for="price" class="form-label">Price</label>
            <input type="text" name="listing[price]" value="<%=EditList.price%>" class="form-control" required>
            <div class="valid-feedback">Looks Good!</div>
          <div class="invalid-feedback">Price cannot be empty</div>
          </div>


          <div class="mb-3 col-md-8 ">
            <label for="country" class="form-label">Country</label>
            <input type="text" name="listing[country]" value="<%=EditList.country%>" class="form-control" required>
            <div class="valid-feedback">Looks Good!</div>
          <div class="invalid-feedback">Country needs to be mentioned</div>
          </div>
        </div>

        <div class="mb-3">
          <label for="location" class="form-label">Location</label>
          <input type="text" name="listing[location]" value="<%=EditList.location%>" class="form-control" required>
          <div class="valid-feedback">Looks Good!</div>
          <div class="invalid-feedback">Location cannot be empty</div>
        </div>


        <button class="btn btn-dark edit-btn mt-3">Submit</button>
      </form>
    </div>
  </div>
 
 